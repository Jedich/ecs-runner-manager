{
  "family": "my-ecs-task",
  "containerDefinitions": [
    {
      "name": "ecs-runner-controller",
      "image": "my-image:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "shared-config",
          "containerPath": "/shared",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "environment": [
        {
          "name": "ENV_VAR",
          "value": "value"
        }
      ]
    },
    {
      "name": "prometheus",
      "image": "prom/prometheus",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 9090,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "shared-config",
          "containerPath": "/shared",
          "readOnly": true
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "shared-config",
      "host": {
        "sourcePath": "/ecs/shared-config"
      }
    }
  ]
}
