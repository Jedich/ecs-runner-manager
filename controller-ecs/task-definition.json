{
  "family": "my-ecs-task",
  "containerDefinitions": [
    {
      "name": "ecs-runner-controller",
      "image": "my-image:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "environment": [
        {
          "name": "ENV_VAR",
          "value": "value"
        }
      ]
    }
  ]
}
